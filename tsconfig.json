{
  "compilerOptions": {
    "sourceMap": true,
    "target": "es2020",
    "module": "es6",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "types": ["node"],
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "skipLibCheck": true 
  },
  "exclude": [
    "node_modules",
    "public_html",
    // "test.ts",
    "**/*.spec.ts",
 ]
}
